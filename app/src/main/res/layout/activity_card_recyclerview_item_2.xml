<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ly_conttotal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_border_item">

    <!--SECCIÓN ARRIBA-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ly_izquierda"
            android:layout_width="15dp"
            android:layout_height="match_parent"
            android:background="@drawable/background_border_izquierda" />

        <!--Número Factura-->
        <LinearLayout
            android:id="@+id/ly_centro"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_toStartOf="@+id/ly_menu"
            android:layout_toEndOf="@+id/ly_izquierda"
            android:orientation="horizontal">

            <!--Titulo-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="0.4"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="Tasa de Cambio"
                    android:textColor="@color/GrisSemiClaro"
                    android:textSize="12sp"
                    app:fontFamily="@font/circularstdblackitalic" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_weight="0"
                    android:background="@color/colorPrimary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="Pais - Simbolo"
                    android:textColor="@color/GrisSemiClaro"
                    android:textSize="12sp"
                    app:fontFamily="@font/circularstdblackitalic" />

            </LinearLayout>

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_weight="0"
                android:background="@color/colorPrimary" />

            <!--Detalle-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="0.6"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_registro_nombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:maxLines="1"
                    android:text="Cordoba"
                    android:textColor="@color/GrisOscuro"
                    android:textSize="12sp"
                    app:fontFamily="@font/circularstdblack" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_weight="0"
                    android:background="@color/colorPrimary" />

                <TextView
                    android:id="@+id/tv_registro_pais"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:maxLines="1"
                    android:text="Nicaragua - Cordoba"
                    android:textColor="@color/GrisOscuro"
                    android:textSize="12sp"
                    app:fontFamily="@font/circularstdblack" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_menu"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:background="@drawable/background_border_derecha">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                app:srcCompat="@drawable/ic_menu"
                app:tint="@color/Blanco0" />
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>