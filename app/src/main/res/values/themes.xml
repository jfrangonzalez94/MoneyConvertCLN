<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MoneyConvertCLN"  parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/Blanco0</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimaryDark</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/Blanco0</item>
        <!--<item name="android:textColorPrimary">@color/Blanco0</item>-->
        <item name="android:titleTextColor">@color/Blanco0</item>
        <item name="android:textColorSecondary">@color/Negro</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/Negro</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ButtonStyleFilled">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/Blanco0</item>
        <item name="rippleColor">@color/Blanco0</item>
    </style>

    <style name="ButtonStyleStroked">
        <item name="backgroundTint">@color/Blanco0</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
</resources>